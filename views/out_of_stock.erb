<div id='page'>
  <div id='header'>
    <h1 class='embiggen'>📝 Out of Stock 📝</h1>
  </div>
  <% if @data_files.any? %>
    <div id='nav'>
      <% @data_files.each do |data_file| %>
        <a href='#<%= data_file.safe_name %>'><%= data_file.name %></a>
        <%= '•' unless data_file == @data_files.last %> 
      <% end %>
    </div>
    <div id='content'>
      <% @data_files.each do |data_file| %>
        <a id='<%= data_file.safe_name %>'></a>
        <p>
        <%= erb :_data_file, locals: { data_file: data_file } %>
        </p>
      <% end %>
    </div>
  <% else %>
    <div id='center'>
      <p>
      <img src="<%= @site.gif %>" alt="Rotating <%= @site.icon %>" />
      </p>
      <p>
      No out of stock food!
      </p>
    </div>
  <% end %>
</div>
