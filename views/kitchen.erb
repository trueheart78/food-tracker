<div align='center'>
  <div style='width: 800px; text-align: center; border-style: none;'>
    <h1 style='font-size:20pt;'>🍔 In The Kitchen 🍔</h1>
    <a name='page_top'></a>
  </div>
  <div style='width: 800px; text-align: left; border-style: none;'>
    <% @data_files.each do |data_file| %>
      <a href='#<%= data_file.safe_name %>'><%= data_file.name %></a>
    <% end %>
  </div>
  <div style='width: 800px; text-align: left; border-style: none;'>
    <% @data_files.each do |data_file| %>
      <p>
      <%= erb :_data_file, locals: { data_file: data_file } %>
      </p>
    <% end %>
  </div>
</div>
